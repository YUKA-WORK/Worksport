/**********************************
  *
  * BUTTON
  *
  **********************************/
button:focus {
  outline: 0;
}

.shiny-button-outer {
  background-color: #0588d6;
  padding: 1.5px;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
  position: relative;
  overflow: hidden;
}

.shiny-button-outer:before {
  content: "";
  width: 60%;
  height: 5.5px;
  display: block;
  background-color: #7ee9ff;
  border-radius: 50%;
  position: absolute;
  top: -5px;
  z-index: 1;
  box-shadow: 0px 0px 2px 2px #7ee9ff;
}

.shiny-button-outer:after {
  content: "";
  width: 70%;
  height: 5.5px;
  display: block;
  background-color: #7ee9ff;
  border-radius: 50%;
  position: absolute;
  bottom: -5px;
  z-index: 1;
  box-shadow: 0px 0px 2px 2px #7ee9ff;
}

.shiny-button {
  color: $white !important;
  background-color: $blue !important;
  border-radius: 10px;
  font-size: 15px;
  font-weight: 500;
  line-height: 1.5;
  text-align: center;
  padding: 10px 40px;
  border: solid 1.5px $blue !important;
  overflow: hidden;
  box-shadow: 0 0 0 0 transparent;
  position: relative;
  text-decoration: none;
  transition: 0.3s all ease;
  display: inline-block;
}

.shiny-button:before {
  content: "";
  display: block;
  width: 0px;
  height: 85%;
  position: absolute;
  top: 7%;
  left: 0%;
  opacity: 0;
  background: $white;
  box-shadow: 0 0 60px 20px $white;
  transform: skewX(-20deg);
}

.shiny-button:after {
  display: inline-block;
  width: 10px;
  height: 10px;
  content: "";
  background: 0 0;
  border-top: 1.5px solid $white;
  border-left: 1.5px solid $white;
  text-decoration: none;
  color: transparent;
  transform: rotate(135deg);
  margin-left: 15px;
}

.shiny-button:hover:before {
  animation: shine 0.4s 0s linear;
}

@keyframes shine {
  from {
    opacity: 0;
    left: -10%;
  }

  50% {
    opacity: 1;
  }

  to {
    opacity: 0;
    left: 100%;
  }
}

