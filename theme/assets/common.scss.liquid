  }

  .container .right-column ul li {
    margin-bottom: 25%;
  }

  .container .right-column ul li:last-child {
    margin-bottom: 0;
  }

  .container .right-column ul li a {
    @include fluid(50, 30, font-size);
    font-weight: 600;
    line-height: 1.2;
    color: $white;
    text-transform: capitalize;
    position: relative;
    border-bottom: 3px solid transparent;
    padding-bottom: 10px;
    transition: 0.3s ease all;
  }

  .container .right-column ul li.current-link a,
  .container .right-column ul li a:hover {
    border-color: $white;
    transition: 0.3s ease all;
  }
}

.hamburger-menu.active {
  transform: translateY(0%);
}

#hamburger {
  opacity: 0.5;
  cursor: pointer;
  transition: opacity 0.25s linear;
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
}

#hamburger:hover {
  opacity: 1;
}

#hamburger div,
#hamburger div:after,
#hamburger div:before {
  display: block;
  background-color: #fafafa;
  border-radius: 10px;
  width: 40px;
  height: 5px;
  transition: all 0.15s linear;
}

#hamburger div:before,
#hamburger div:after {
  content: "";
  position: absolute;
}

#hamburger div:before {
  transform: translateY(-250%);
}

#hamburger div:after {
  transform: translateY(250%);
}

#hamburger.active div {
  background: transparent;
}

#hamburger.active div:before {
  transform: rotate(45deg);
}

#hamburger.active div:after {
  transform: rotate(-45deg);
}

