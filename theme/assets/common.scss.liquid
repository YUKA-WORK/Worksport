  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #2c2e34e3;
  transform: translateY(-100%);
  transition: all 0.3s ease-in-out;
  z-index: 1;

  .page-width {
    @include flex-center-center();
    width: 100%;
    height: 100%;
  }

  .container {
    @include flex-spacebetween-center();
    align-items: stretch;
    width: 100%;
    height: 100%;
  }

  .container > * {
    flex-basis: 50%;
    padding: 5%;
  }

  .container .left-column {
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
  }

  .container .right-column {
    @include flex-center-center();
  }

  .container .left-column .social-list {
